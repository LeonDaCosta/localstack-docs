---
// Styles adapted from https://github.com/withastro/starlight/blob/main/packages/starlight/components/SidebarSublist.astro
// and https://www.figma.com/design/GrDkcguAR7tSWPFuLVDixq/Theme---Starlight-Docs?node-id=454-34753&t=fgVYGvAg6ftBSpJY-0
console.log(Astro.locals.starlightUtils.navLinks);
---
{
  Astro.locals.starlightUtils.navLinks && Object.keys(Astro.locals.starlightUtils.navLinks).length > 0 && (
  <>
  {Object.entries(Astro.locals.starlightUtils.navLinks).map(([key, entries]) => (
    <ul id={key}>
      {entries.map((entry) => (
        <li>
          <a
            href={entry.href}
            {...entry.attrs}
            aria-current={entry.isCurrent && "page"}
          >
            {entry.label}
          </a>
        </li>
      ))}
    </ul>
  ))}
  </>
  )
}

<script>
  console.log("stuff");
  document.addEventListener('sidebarChanged', (event) => {
    console.log("Sidebar changed to: " + event.detail.value);
  });
</script>

<style>
  ul {
    display: flex;
    list-style: none;
    padding: 0;
    gap: var(--sl-nav-gap);
  }
  a {
    text-decoration: none;
    color: var(--sl-color-gray-1);
  }

  a:hover,
  a:focus {
    color: var(--sl-color-white);
  }

  [aria-current="page"],
  [aria-current="page"]:hover,
  [aria-current="page"]:focus {
    font-weight: 600;
  }

  @media (min-width: 50rem) {
    a {
      font-size: var(--sl-text-sm);
    }
  }
</style>
