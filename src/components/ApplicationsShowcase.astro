---
import applicationsData from '../data/developerhub/applications.json';
import servicesData from '../data/developerhub/services.json';
import platformsData from '../data/developerhub/platforms.json';
import deploymentsData from '../data/developerhub/deployments.json';
import complexitiesData from '../data/developerhub/complexities.json';
import { ApplicationsShowcase } from './applications/ApplicationsShowcase';

const applications = applicationsData.applications;
---

<ApplicationsShowcase 
  applications={applications}
  services={servicesData}
  platforms={platformsData}
  deployments={deploymentsData}
  complexities={complexitiesData}
  client:load
/>

<style>
  /* Clean Applications Showcase */
  :global(.applications-showcase) {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Top Bar */
  :global(.top-bar) {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: var(--sl-color-bg-sidebar);
    border: 1px solid var(--sl-color-gray-6);
    border-radius: 0.5rem;
    flex-wrap: wrap;
  }

  :global(.search-container) {
    position: relative;
    flex: 2;
    min-width: 300px;
  }

  :global(.search-input) {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.375rem;
    background: var(--sl-color-bg);
    color: var(--sl-color-white);
    font-size: 0.875rem;
  }

  :global(.search-input:focus) {
    outline: none;
    border-color: var(--sl-color-accent);
  }

  :global(.search-clear) {
    position: absolute;
    right: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: var(--sl-color-gray-3);
    font-size: 1.25rem;
    cursor: pointer;
    width: 1.5rem;
    height: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  :global(.search-clear:hover) {
    color: var(--sl-color-white);
  }

  :global(.filter-select) {
    padding: 0.75rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.375rem;
    background: var(--sl-color-bg);
    color: var(--sl-color-white);
    font-size: 0.875rem;
    min-width: 140px;
    flex-shrink: 0;
  }

  :global(.filter-select:focus) {
    outline: none;
    border-color: var(--sl-color-accent);
  }

  :global(.pro-toggle) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--sl-color-white);
    cursor: pointer;
    white-space: nowrap;
  }

  :global(.sort-select) {
    padding: 0.75rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.375rem;
    background: var(--sl-color-bg);
    color: var(--sl-color-white);
    font-size: 0.875rem;
    min-width: 120px;
    flex-shrink: 0;
  }

  :global(.clear-filters) {
    background: var(--sl-color-accent);
    color: white;
    border: none;
    padding: 0.75rem 1rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    cursor: pointer;
    white-space: nowrap;
  }

  :global(.clear-filters:hover) {
    background: var(--sl-color-accent-high);
  }

  :global(.results-info) {
    margin-bottom: 1rem;
    color: var(--sl-color-gray-2);
    font-size: 0.875rem;
  }

  /* Applications Grid */
  :global(.applications-grid) {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  /* Application Cards */
  :global(.app-card) {
    background: var(--sl-color-bg-sidebar);
    border: 1px solid var(--sl-color-gray-6);
    border-radius: 0.75rem;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  :global(.app-card:hover) {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  :global(.card-image) {
    position: relative;
    width: 100%;
    height: 180px;
    overflow: hidden;
  }

  :global(.card-image img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  :global(.card-badges) {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    display: flex;
    gap: 0.5rem;
    flex-direction: column;
    align-items: flex-end;
  }

  :global(.pro-badge) {
    background: var(--sl-color-accent);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 600;
  }

  :global(.complexity-badge) {
    background: rgba(255, 255, 255, 0.9);
    color: var(--sl-color-gray-6);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: capitalize;
  }

  :global(.card-content) {
    padding: 1.25rem;
  }

  :global(.card-title) {
    margin: 0 0 0.75rem 0;
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--sl-color-white);
    line-height: 1.3;
  }

  :global(.card-description) {
    margin: 0 0 1.25rem 0;
    color: var(--sl-color-gray-2);
    line-height: 1.5;
    font-size: 0.875rem;
  }

  :global(.card-footer) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  :global(.service-icons) {
    display: flex;
    gap: 0.375rem;
    align-items: center;
    flex-wrap: wrap;
    flex: 1;
  }

  :global(.service-icon) {
    width: 1.75rem;
    height: 1.75rem;
    padding: 0.25rem;
    background: var(--sl-color-bg);
    border: 1px solid var(--sl-color-gray-6);
    border-radius: 0.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  :global(.service-icon:hover) {
    border-color: var(--sl-color-accent);
    transform: scale(1.1);
  }

  :global(.service-icon img) {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  :global(.service-more) {
    padding: 0.25rem 0.5rem;
    background: var(--sl-color-bg);
    border: 1px solid var(--sl-color-gray-6);
    border-radius: 0.25rem;
    font-size: 0.75rem;
    color: var(--sl-color-gray-3);
  }

  :global(.card-link) {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--sl-color-accent);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    padding: 0.5rem 0.75rem;
    border: 1px solid var(--sl-color-accent);
    border-radius: 0.375rem;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  :global(.card-link:hover) {
    background: var(--sl-color-accent);
    color: white;
  }

  /* No Results */
  :global(.no-results) {
    grid-column: 1 / -1;
    text-align: center;
    padding: 3rem 1rem;
    color: var(--sl-color-gray-2);
  }

  :global(.no-results h3) {
    margin: 0 0 0.5rem 0;
    color: var(--sl-color-white);
  }

  :global(.no-results p) {
    margin: 0 0 1.5rem 0;
  }

  :global(.reset-button) {
    background: var(--sl-color-accent);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    cursor: pointer;
  }

  :global(.reset-button:hover) {
    background: var(--sl-color-accent-high);
  }

  /* Responsive */
  @media (max-width: 768px) {
    :global(.applications-showcase) {
      padding: 0 0.75rem;
    }

    :global(.top-bar) {
      flex-direction: column;
      align-items: stretch;
    }

    :global(.search-container) {
      min-width: auto;
      flex: none;
    }

    :global(.filter-select),
    :global(.sort-select) {
      min-width: auto;
    }

    :global(.applications-grid) {
      grid-template-columns: 1fr;
    }

    :global(.card-footer) {
      flex-direction: column;
      align-items: stretch;
      gap: 0.75rem;
    }

    :global(.service-icons) {
      justify-content: center;
    }
  }
</style> 