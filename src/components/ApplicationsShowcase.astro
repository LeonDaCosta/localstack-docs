---
import applicationsData from '../data/developerhub/applications.json';
import servicesData from '../data/developerhub/services.json';
import platformsData from '../data/developerhub/platforms.json';
import deploymentsData from '../data/developerhub/deployments.json';
import complexitiesData from '../data/developerhub/complexities.json';
import { ApplicationsShowcase } from './applications/ApplicationsShowcase';

const applications = applicationsData.applications;
---

<ApplicationsShowcase 
  applications={applications}
  services={servicesData}
  platforms={platformsData}
  deployments={deploymentsData}
  complexities={complexitiesData}
  client:load
/>

<style>
  /* Applications Showcase Styles */
  :global(.applications-showcase) {
    margin: 2rem 0;
  }

  :global(.showcase-header) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  :global(.search-controls) {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
  }

  :global(.search-input) {
    padding: 0.5rem 1rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.375rem;
    background: var(--sl-color-bg);
    color: var(--sl-color-white);
    font-size: 0.875rem;
    min-width: 250px;
  }

  :global(.search-input:focus) {
    outline: none;
    border-color: var(--sl-color-accent);
    box-shadow: 0 0 0 2px var(--sl-color-accent-low);
  }

  :global(.pro-filter) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    font-size: 0.875rem;
    color: var(--sl-color-gray-2);
  }

  :global(.results-count) {
    color: var(--sl-color-gray-2);
    font-size: 0.875rem;
  }

  :global(.showcase-content) {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 2rem;
  }

  @media (max-width: 768px) {
    :global(.showcase-content) {
      grid-template-columns: 1fr;
    }
  }

  /* Filters Sidebar */
  :global(.filters-sidebar) {
    background: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-gray-6);
    border-radius: 0.5rem;
    padding: 1.5rem;
    height: fit-content;
    position: sticky;
    top: 2rem;
  }

  :global(.filters-sidebar h3) {
    margin: 0 0 1.5rem 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--sl-color-white);
  }

  :global(.filter-section) {
    margin-bottom: 2rem;
  }

  :global(.filter-section:last-child) {
    margin-bottom: 0;
  }

  :global(.filter-title) {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--sl-color-white);
    margin: 0 0 1rem 0;
  }

  :global(.filter-items) {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  :global(.filter-item) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    font-size: 0.75rem;
    color: var(--sl-color-gray-2);
  }

  :global(.filter-checkbox) {
    width: 1rem;
    height: 1rem;
    accent-color: var(--sl-color-accent);
  }

  :global(.filter-label) {
    line-height: 1.4;
  }

  /* Applications Grid */
  :global(.applications-grid) {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1.5rem;
  }

  :global(.application-card) {
    background: var(--sl-color-bg-sidebar);
    border: 1px solid var(--sl-color-gray-6);
    border-radius: 0.75rem;
    overflow: hidden;
    transition: all 0.2s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  :global(.application-card:hover) {
    border-color: var(--sl-color-accent);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    transform: translateY(-2px);
  }

  :global(.application-card-link) {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  :global(.application-card-image) {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  :global(.application-card-image img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  :global(.pro-badge) {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    background: var(--sl-color-accent);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 600;
  }

  :global(.application-card-content) {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  :global(.application-card-title) {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: var(--sl-color-white);
    line-height: 1.4;
  }

  :global(.application-card-description) {
    font-size: 0.875rem;
    color: var(--sl-color-gray-2);
    margin: 0 0 1.5rem 0;
    line-height: 1.5;
    flex-grow: 1;
  }

  :global(.application-card-footer) {
    margin-top: auto;
  }

  :global(.service-icons) {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  :global(.service-icon) {
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 0.25rem;
  }

  :global(.service-count) {
    font-size: 0.75rem;
    color: var(--sl-color-gray-3);
    background: var(--sl-color-gray-6);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
  }

  :global(.tech-stack) {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  :global(.platforms), :global(.deployments) {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  :global(.tech-badge) {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    background: var(--sl-color-gray-6);
    color: var(--sl-color-gray-1);
    white-space: nowrap;
  }

  :global(.platform-badge) {
    background: var(--sl-color-blue-low);
    color: var(--sl-color-blue);
  }

  :global(.deployment-badge) {
    background: var(--sl-color-green-low);
    color: var(--sl-color-green);
  }

  /* No Results */
  :global(.no-results) {
    grid-column: 1 / -1;
    text-align: center;
    padding: 3rem;
    color: var(--sl-color-gray-2);
  }

  :global(.no-results p) {
    margin: 0 0 1rem 0;
    font-size: 1.125rem;
  }

  :global(.clear-filters-btn) {
    background: var(--sl-color-accent);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    cursor: pointer;
    font-size: 0.875rem;
    font-weight: 500;
    transition: background-color 0.2s ease;
  }

  :global(.clear-filters-btn:hover) {
    background: var(--sl-color-accent-high);
  }
</style> 