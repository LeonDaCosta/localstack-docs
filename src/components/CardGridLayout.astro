---
export interface GridCard {
  title: string;
  href: string;
  imageSrc: string;
  imageWidth?: number;
}

interface Props {
  cards: GridCard[];
}

const { cards } = Astro.props;
---

<div class="row mt-4">
  {cards.map((card) => (
    <div class="col-lg-12 col-xl-6 d-flex justify-content-center">
      <a 
        href={card.href} 
        class="justify-content-between d-flex flex-column text-center"
        style="text-decoration: none; color: inherit;"
      >
        <strong>{card.title}</strong>
        <img 
          src={card.imageSrc} 
          alt={card.title}
          width={card.imageWidth || 400}
          style="margin: 1rem 0;"
        />
      </a>
    </div>
  ))}
</div>

<style>
  .row {
    display: flex;
    flex-wrap: wrap;
    margin-left: -0.75rem;
    margin-right: -0.75rem;
  }
  
  .mt-4 {
    margin-top: 1rem;
  }
  
  .col-lg-12 {
    flex: 0 0 100%;
    max-width: 100%;
    padding-left: 0.75rem;
    padding-right: 0.75rem;
  }
  
  .col-xl-6 {
    flex: 0 0 50%;
    max-width: 50%;
  }
  
  @media (max-width: 1200px) {
    .col-xl-6 {
      flex: 0 0 100%;
      max-width: 100%;
    }
  }
  
  @media (max-width: 992px) {
    .col-lg-12 {
      flex: 0 0 100%;
      max-width: 100%;
    }
  }
  
  .d-flex {
    display: flex;
  }
  
  .justify-content-center {
    justify-content: center;
  }
  
  .justify-content-between {
    justify-content: space-between;
  }
  
  .flex-column {
    flex-direction: column;
  }
  
  .text-center {
    text-align: center;
  }
  
  a {
    color: inherit;
    text-decoration: none;
  }
  
  a:hover {
    text-decoration: underline;
  }
  
  strong {
    margin-bottom: 1rem;
    display: block;
  }
</style> 